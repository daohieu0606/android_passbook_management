<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tabBarArea"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_header_controls">

        <com.example.passbook.customviews.IconLabel
            android:id="@+id/btnBack"
            android:text="@string/fi_back"
            android:textColor="@color/white"
            android:textSize="@dimen/icon_size"
            android:layout_marginStart="@dimen/base_control_margin"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtTitle"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:textSize="@dimen/icon_size"
            android:layout_toRightOf="@id/btnBack"
            android:layout_marginStart="@dimen/margin_back_button"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.example.passbook.customviews.IconLabel
            android:id="@+id/btnMenu"
            android:text="@string/fi_menu"
            android:textColor="@color/white"
            android:textSize="@dimen/icon_size"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>